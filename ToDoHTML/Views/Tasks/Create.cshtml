@using ToDoHTML.Models
@model Task

<fieldset>
    <legend>Пожалуйста, заполните необходимые поля</legend>
    @using (Html.BeginForm("Create", "Tasks", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        @Html.EditorForModel()
        <input type="submit" value="Сохранить" />
        <button>@Html.ActionLink("Отменить", "Index", "Tasks")</button>
    }
</fieldset>

